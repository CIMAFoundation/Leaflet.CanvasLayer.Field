{
    "root": true,
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": ["error", 4, {
            "SwitchCase": 1
        }],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "no-unused-vars": "warn",
        "no-console": "warn",
        "camelcase": "warn",
        "max-len": ["warn", 132]
    },
    "parser": "@babel/eslint-parser",
    "parserOptions": {
      "requireConfigFile": false,
      "babelOptions": {
        "presets": ["@babel/preset-env"]
      }
    },
    "globals": {
        "require": true,
        "window": true,
        "L": true,
        "d3": true,        
        "GeoTIFF": true
    }
}